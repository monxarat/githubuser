<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <TextView
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/nameTextView"
            android:text="1111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:background="@drawable/visibility_round_border"
            android:layout_marginStart="8dp"
            android:id="@+id/visibilityTextView"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="Public"
            android:lines="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:text="1111111"
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>


    <LinearLayout android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.clcosmos.githubuser.view.ViewColor
            android:layout_gravity="center"
            android:id="@+id/img_lang_color"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
        <TextView
            android:text="Ruby"
            android:id="@+id/languageTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:textSize="14sp" />
        <TextView
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/icon_star"
            android:text="678"
            android:id="@+id/starsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
        <TextView
            android:drawableStart="@drawable/icon_fork"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:text="71"
            android:id="@+id/forkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
        <TextView
            android:drawableStart="@drawable/icon_issue"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:text="71"
            android:id="@+id/issueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
        <TextView
            android:drawableStart="@drawable/icon_pull_request"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:text="71"
            android:id="@+id/pullRequestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>
